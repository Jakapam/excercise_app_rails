Real Name: <%= @user.to_s %> <br>
Username: <%= @user.username %> <br>


<!-- Day View -->
<% if @user.id == session[:user_id]%>
<h2>Today's Workout</h2>
  <% if @todays_routines.empty? %>
    <p>You have no workouts scheduled for today. :-(</p>
  <% else %>
  <%  @todays_routines.each do |exercise| %>
    <h3>- - - </h3>
    <p>Exercise Name:<%= link_to exercise.exercise.name, exercise_path(exercise.exercise) %></p>
    <p>Sets:<%= exercise.sets %></p>
    <p> Reps:<%= exercise.reps %></p>
    <p> Weight:<%= exercise.weight %></p>
  <% end %>
  <% end %>

<%end%>

<% if @routines.size > 1  %>
  <%= link_to 'View Routines', user_routines_path(@user)%><br>
<% elsif @routines.size == 1%>
  <%= link_to 'View Routine', user_routine_path(@user,@routines.first) %><br>
<% elsif @user.id == session[:user_id] %>
  <p>You currently have no routines, please add a routine using the link below.</p>
<% end %>

<% if @user.id == session[:user_id]%>
  <%= link_to 'Add Routine', new_user_routine_path(@user) %><br>
<%end%>
 <br>

<% if @user.id != session[:user_id] %>
  <%= link_to "See Challenges for #{@user.username} and/or Challenge this User", user_challenges_path(@user) %>
<% elsif @user.received_challenges.size > @user.completed_challenges.size %>
  <%= link_to 'Someone has challenged you!', user_challenges_path(@user) %>
<% elsif !@user.issued_challenges.empty? %>
  <%= link_to 'Check on your challenges!', user_challenges_path(@user) %>
<% end %>
