<% if @user.id != session[:user_id] %>
  <%= link_to "See Challenges for #{@user.username}", user_challenges_path(@user) %>
<% elsif @user.received_challenges.size > @user.completed_challenges.size %>
  <%= link_to 'You Have Challenges From Friends', user_challenges_path(@user) %>
